{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prestamo</h1>

    <table>
        <tbody>
            <tr>
                <th>Idprestamo</th>
                <td>{{ prestamo.idprestamo }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{% if prestamo.fechainicio %}{{ prestamo.fechainicio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechafin</th>
                <td>{% if prestamo.fechafin %}{{ prestamo.fechafin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ prestamo.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prestamo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('prestamo_edit', { 'idprestamo': prestamo.idprestamo }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
