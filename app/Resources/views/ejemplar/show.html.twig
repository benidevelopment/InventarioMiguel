{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ejemplar</h1>

    <table>
        <tbody>
            <tr>
                <th>Idejemplar</th>
                <td>{{ ejemplar.idejemplar }}</td>
            </tr>
            <tr>
                <th>Identificacion</th>
                <td>{{ ejemplar.identificacion }}</td>
            </tr>
            <tr>
                <th>Fechaalta</th>
                <td>{% if ejemplar.fechaalta %}{{ ejemplar.fechaalta|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prestado</th>
                <td>{% if ejemplar.prestado %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ejemplar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ejemplar_edit', { 'idejemplar': ejemplar.idejemplar }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
