                <td><a href="{{ path('ubicacion_show', { 'idubicacion': ubicacion.idubicacion }) }}">{{ ubicacion.idubicacion }}</a></td>
                <td>{{ ubicacion.descripcion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ubicacion_show', { 'idubicacion': ubicacion.idubicacion }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ubicacion_edit', { 'idubicacion': ubicacion.idubicacion }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ubicacion_new') }}">Create a new ubicacion</a>
        </li>
    </ul>
{% endblock %}
