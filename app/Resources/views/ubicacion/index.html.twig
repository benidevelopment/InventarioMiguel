{% extends 'base.html.twig' %}

{% block body %}
    <link href="{{ asset("css/personalizacion.css") }}" rel="stylesheet" type="text/css">
<div class="navbar" id="categoriasNav">
<h1 >UBICACIONES</h1>
<a href="{{url("ubicacion_new")}}"><button  type="button" class="btn btn-primary" >Nueva Ubicacion <div class="glyphicon glyphicon-plus"></div></button></a>
</div>

    <table>
        <thead>
            <tr>
                <th>Idubicacion</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ubicacion in ubicacions %}
